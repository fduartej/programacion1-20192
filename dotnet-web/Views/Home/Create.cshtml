@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model dotnet_web.models.Follower

<!DOCTYPE html>
<html>
    <title>Dora App</title>
<body>
    <h1>Bienvenido a Dora Site</h1><br>
   
    <div>
        <form asp-controller="Home" asp-action="RegistrarFan">
            <label>Es un Fun</label><br/>
            <label>Nombres</label>
            <input asp-for="Name"/><br/>
            <label>Correo</label>
            <input asp-for="Email"/><br/>
            <label>Estado Civil</label>
            <select asp-for="MarriedStatus">
                <option value="single">Soltero</option>
                <option value="married">Casado</option>
                <option value="divorced">Divorciado</option>
                <option value="complicated">Complicado</option>
            </select><br/>
            <label>Genero</label>
            <input type="radio" asp-for="Gender" value="masculino"/>Masculino
            <input type="radio" asp-for="Gender" value="femenino"/>Femenino<br/>
            <label>Fecha Nacimiento</label>
            <input asp-for="Birth"/><br/>
            <input type="submit" value="Registrate"/>
        </form>
        <img src="/images/dora.jpg" width="300px" height="200px"/>
    </div>
    
    
</body>
</html>